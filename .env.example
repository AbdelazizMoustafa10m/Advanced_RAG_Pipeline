# Advanced RAG Pipeline - Environment Variables Example
# Copy this file to .env and fill in your values

# Application Environment
# Options: development, testing, staging, production
RAG_ENVIRONMENT=development

# Configuration Path (set to YAML config by default)
RAG_CONFIG_PATH=./config.yaml

# ===== API Keys =====
# Keep all API keys here (not in the YAML config)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
QDRANT_API_KEY=your_qdrant_api_key_here

# ===== LLM Configuration =====

# Metadata LLM (for document/code enrichment)
RAG_LLMCONFIG_METADATA_LLM_PROVIDER=groq
RAG_LLMCONFIG_METADATA_LLM_MODEL_NAME=llama-3.1-8b-instant
RAG_LLMCONFIG_METADATA_LLM_API_KEY_ENV_VAR=GROQ_API_KEY

# Query LLM (for RAG queries)
RAG_LLMCONFIG_QUERY_LLM_PROVIDER=groq
RAG_LLMCONFIG_QUERY_LLM_MODEL_NAME=llama-3.1-70b-versatile
RAG_LLMCONFIG_QUERY_LLM_API_KEY_ENV_VAR=GROQ_API_KEY

# Coding LLM (for code-specific tasks)
RAG_LLMCONFIG_CODING_LLM_PROVIDER=groq
RAG_LLMCONFIG_CODING_LLM_MODEL_NAME=llama-3.1-70b-instant
RAG_LLMCONFIG_CODING_LLM_API_KEY_ENV_VAR=GROQ_API_KEY

# ===== Embedder Configuration =====

# HuggingFace Embeddings (default)
# RAG_EMBEDDERCONFIG_PROVIDER=huggingface
# RAG_EMBEDDERCONFIG_MODEL_NAME=BAAI/bge-small-en-v1.5
# RAG_EMBEDDERCONFIG_EMBED_BATCH_SIZE=16

# OpenAI Embeddings
# RAG_EMBEDDERCONFIG_PROVIDER=openai
# RAG_EMBEDDERCONFIG_MODEL_NAME=text-embedding-3-small
# RAG_EMBEDDERCONFIG_API_KEY_ENV_VAR=OPENAI_API_KEY

# Cohere Embeddings
# RAG_EMBEDDERCONFIG_PROVIDER=cohere
# RAG_EMBEDDERCONFIG_MODEL_NAME=embed-english-v3.0
# RAG_EMBEDDERCONFIG_API_KEY_ENV_VAR=COHERE_API_KEY

# Ollama Embeddings (local)
RAG_EMBEDDERCONFIG_PROVIDER=ollama
RAG_EMBEDDERCONFIG_MODEL_NAME=nomic-embed-text
RAG_EMBEDDERCONFIG_API_BASE=http://localhost:11434
RAG_EMBEDDERCONFIG_EMBED_BATCH_SIZE=8

# Embedder Caching
RAG_EMBEDDERCONFIG_USE_CACHE=true
RAG_EMBEDDERCONFIG_CACHE_DIR=./.cache/embeddings

# ===== Vector Store Configuration =====

# General Vector Store Settings
RAG_VECTORSTORECONFIG_ENGINE=chroma
RAG_VECTORSTORECONFIG_COLLECTION_NAME=unified_knowledge
RAG_VECTORSTORECONFIG_DISTANCE_METRIC=cosine

# ChromaDB Settings
RAG_VECTORSTORECONFIG_VECTOR_DB_PATH=./vector_db

# Qdrant Settings
# RAG_VECTORSTORECONFIG_ENGINE=qdrant
# RAG_VECTORSTORECONFIG_QDRANT_LOCATION=local
# RAG_VECTORSTORECONFIG_QDRANT_LOCAL_PATH=./qdrant_db
# RAG_VECTORSTORECONFIG_QDRANT_PREFER_GRPC=false

# For cloud Qdrant
# RAG_VECTORSTORECONFIG_QDRANT_LOCATION=cloud
# RAG_VECTORSTORECONFIG_QDRANT_URL=https://your-cluster-url.qdrant.io
# RAG_VECTORSTORECONFIG_QDRANT_API_KEY_ENV_VAR=QDRANT_API_KEY

# ===== Parallel Processing =====
RAG_PARALLELCONFIG_ENABLED=true
RAG_PARALLELCONFIG_MAX_WORKERS=4

# ===== Document Registry =====
RAG_REGISTRYCONFIG_ENABLED=true
RAG_REGISTRYCONFIG_DB_PATH=./doc_reg_db/document_registry.db
RAG_REGISTRYCONFIG_RESET_STALLED_AFTER_SECONDS=3600

# ===== Query Pipeline Configuration =====
RAG_QUERYPIPELINECONFIG_TIMEOUT_SECONDS=60
RAG_QUERYPIPELINECONFIG_CACHE_RESULTS=true
RAG_QUERYPIPELINECONFIG_CACHE_DIR=./.cache/query_results

# Retrieval Settings
RAG_QUERYPIPELINECONFIG_RETRIEVAL_RETRIEVER_STRATEGY=hybrid
RAG_QUERYPIPELINECONFIG_RETRIEVAL_SIMILARITY_TOP_K=7
RAG_QUERYPIPELINECONFIG_RETRIEVAL_USE_HYBRID_SEARCH=true
RAG_QUERYPIPELINECONFIG_RETRIEVAL_HYBRID_ALPHA=0.7

# Reranker Settings
RAG_QUERYPIPELINECONFIG_RERANKER_ENABLE_RERANKING=true
RAG_QUERYPIPELINECONFIG_RERANKER_RERANKER_TYPE=semantic
RAG_QUERYPIPELINECONFIG_RERANKER_RERANK_TOP_N=10

# Synthesis Settings
RAG_QUERYPIPELINECONFIG_SYNTHESIS_SYNTHESIS_STRATEGY=refine
RAG_QUERYPIPELINECONFIG_SYNTHESIS_INCLUDE_CITATIONS=true